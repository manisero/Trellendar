<!doctype html>
<html lang="en">
<head>
    <meta charset="utf-8">
    <title>User profile</title>

	<style type="text/css">
		body {
			text-align: center;
		}
	</style>
</head>
    <body>
        @Model.Email's boards:
        <ul>
            @foreach (var boardName in Model.AvailableBoards.Values)
            {
                <li>
                    @boardName
                </li>
            }
        </ul>

        @Model.Email's calendars:
        <ul>
            @foreach (var calendarSummary in Model.AvailableCalendars.Values)
            {
                <li>
                    @calendarSummary
                </li>
            }
        </ul>
    </body>
</html>
