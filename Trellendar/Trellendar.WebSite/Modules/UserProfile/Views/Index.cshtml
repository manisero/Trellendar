@using Trellendar.WebSite.Nancy.Extensions
@{
    this.Initialize("Your profile", "UserProfile", "Controller");
}

<div class="floatleft">
    @Model.Email's boards:
    @foreach (var board in Model.AvailableBoards)
    {
        <div>
            <div board="@board.ID" ng-click="SelectBoard('@board.ID')" class="floatleft">
                @board.Name
            </div>
            <div class="floatright">
                <a href="#" bind-board="@board.ID" ng-click="BindBoard('@board.ID')">
                    bind
                </a>
                <a href="#" unbind-board="@board.ID" ng-click="UnbindBoard('@board.ID')">
                    unbind
                </a>
            </div>
            <div class="clear"></div>
        </div>
    }
</div>
<div class="floatright">
    @Model.Email's calendars:
    @foreach (var calendar in Model.AvailableCalendars)
    {
        <div>
            <div calendar="@calendar.ID" ng-click="SelectCalendar('@calendar.ID')" class="floatleft">
                @calendar.Name
            </div>
            <div class="floatright">
                <a href="#" bind-calendar="@calendar.ID" ng-click="BindCalendar('@calendar.ID')">
                    bind
                </a>
                <a href="#" unbind-calendar="@calendar.ID" ng-click="UnbindCalendar('@calendar.ID')">
                    unbind
                </a>
            </div>
            <div class="clear"></div>
        </div>
    }
</div>
<div class="clear"></div>
